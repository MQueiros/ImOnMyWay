<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.imonmyway.RunningActivity" >

<LinearLayout
   android:layout_width="fill_parent"  
   android:layout_height="0dp"
   android:layout_weight=".75" 
   android:gravity="center"  
   android:orientation="vertical" > 
   
    <ListView
    android:id="@+id/listView1"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	</ListView> 
    
 </LinearLayout> 
 
 <LinearLayout
  	android:layout_width="fill_parent"  
	android:layout_height="0dp"
  	android:layout_weight=".05" 
  	android:gravity="center"  
  	android:orientation="horizontal"
  	android:padding="5dp" >

		<ProgressBar
        	style="?android:attr/progressBarStyleHorizontal"
        	android:layout_width="0dp"
        	android:layout_weight=".70"
        	android:layout_height="wrap_content"
        	android:id="@+id/progress"
        	android:layout_centerHorizontal="true"      
        	android:layout_centerVertical="true"      
        	android:max="100" 
        	android:progress="50"
        />
		
		<TextView  
     		android:id="@+id/actionsInfoText"  
     		android:layout_width="0dp"  
     		android:layout_height="wrap_content" 
   	 		android:layout_weight=".30"  
     		android:gravity="center"  
     		android:text="0/3 actions"
     		android:textColor="#000000"  
   		/>
        
</LinearLayout>
 
 <LinearLayout
  	android:layout_width="fill_parent"  
	android:layout_height="0dp"
  	android:layout_weight=".10" 
  	android:gravity="center"  
  	android:padding="4dp"
  	android:layout_marginRight="2dp"
  	android:orientation="horizontal" >
  	
    <LinearLayout 
	    android:id="@+id/buttonShowMap"
	    android:layout_width="0dp"  
     	android:layout_height="fill_parent" 
     	android:layout_weight=".50"
	    android:background="#39a4c6"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/ShowMapImage"
            android:layout_width="0dp" 
    		android:layout_weight=".30"
    		android:padding="4dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_map" />
    
    <TextView
            android:id="@+id/ShowMapText"
            android:layout_width="0dp" 
    		android:layout_weight=".70"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/running_show_map"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    </LinearLayout> 
     
 	<LinearLayout 
	    android:id="@+id/buttonCancel"
	    android:layout_width="0dp"  
     	android:layout_height="fill_parent" 
     	android:layout_weight=".50"
     	android:padding="4dp"
     	android:layout_marginLeft="2dp"
	    android:background="#555555"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/CancelImage"
            android:layout_width="0dp" 
    		android:layout_weight=".30"
    		android:padding="4dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_cancel" />
    
    <TextView
            android:id="@+id/CancelText"
            android:layout_width="0dp" 
    		android:layout_weight=".70"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/running_cancel"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    </LinearLayout> 
 	
 	</LinearLayout>
 	
 	</LinearLayout>
   


