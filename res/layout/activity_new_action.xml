<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.imonmyway.NewAction"  >

    <TableLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp" 
    android:layout_weight=".90"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="1">
<!--     <TableRow android:padding="5dip"> -->
<!--         <TextView -->
<!--             android:layout_height="wrap_content" -->
<!--             android:text="New Action" -->
<!--             android:typeface="serif" -->
<!--             android:layout_span="2" -->
<!--             android:gravity="center_horizontal" -->
<!--             android:textSize="17dip"/> -->
<!--     </TableRow> -->
	<TableRow>
        <TextView
            android:layout_height="fill_parent"
            android:text="Type:"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/type_text"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:focusable="false"
            android:hint=""
            android:textSize="16dip"/>
    </TableRow>
    <TableRow
        android:id="@+id/to_row"
        >
        <TextView
            android:id="@+id/to_textview"
            android:layout_height="fill_parent"
            android:text="To:"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/to_edit"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:focusable="false"
            android:hint=""
            android:textSize="16dip"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/place_row"
        >
        <TextView
            android:layout_height="fill_parent"
            android:text="Location:"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/place_edit"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:focusable="false"
            android:hint=""
            android:textSize="16dip"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/text_row"
        android:paddingTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_height="fill_parent"
            android:text="Text:"
            android:textStyle="bold"
            android:gravity="top|center"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/text_edit"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:hint="e.g.: I'm On My Way!"
            android:background="@drawable/text_boarder"
            android:maxLines="8"
    		android:lines="4"
    		android:padding="5dp"
    		android:gravity="top"
            android:textSize="16dip" />
    </TableRow>

</TableLayout>

    <Button
        android:id="@+id/buttonAddNewAction"
        android:layout_width="fill_parent" 
        android:layout_height="0dp" 
        android:layout_weight=".10"
        android:textColor="#ffffff"
        android:background="#555555"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:text="Add this Action" /> 

</LinearLayout>