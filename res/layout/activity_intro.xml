<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context="com.example.imonmyway.IntroActivity"
    android:orientation="vertical" >
    

    <LinearLayout 
    android:id="@+id/locationsLayout"
    android:layout_width="fill_parent" 
    android:layout_height="0dp" 
    android:layout_weight=".25"
    android:background="#39a4c6"
	android:layout_margin="2dp"
	android:padding="2dp"
    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/locationsImage"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_map" />
    
    <TextView
            android:id="@+id/locationsText"
            android:layout_width="0dp" 
    		android:layout_weight=".60"
    		android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Locations"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    <TextView
            android:id="@+id/locationshelpText"
            android:layout_width="0dp" 
    		android:layout_weight=".50"
            android:layout_height="fill_parent"
            android:gravity="bottom|right"
            android:text="Click to add locations"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    
    </LinearLayout>
    
    <LinearLayout 
	    android:id="@+id/ActionsLayout"
	    android:layout_width="fill_parent" 
	    android:layout_height="0dp" 
	    android:layout_weight=".25"
	    android:background="#555555"
		android:layout_margin="2dp"
		android:padding="2dp"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/ActionsImage"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_add_to_queue" />
    
    <TextView
            android:id="@+id/ActionsText"
            android:layout_width="0dp" 
    		android:layout_weight=".60"
    		android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Actions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    <TextView
            android:id="@+id/actionshelpText"
            android:layout_width="0dp" 
    		android:layout_weight=".50"
            android:layout_height="fill_parent"
            android:gravity="bottom|right"
            android:text="Click to add actions"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    
    </LinearLayout>
            
        <LinearLayout 
	    android:id="@+id/ScheduleLayout"
	    android:layout_width="fill_parent" 
	    android:layout_height="0dp" 
	    android:layout_weight=".25"
	    android:background="#ff8c00"
		android:layout_margin="2dp"
		android:padding="2dp"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/ScheduleImage"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_fa_calendar" />
    
    <TextView
            android:id="@+id/ScheduleText"
            android:layout_width="0dp" 
    		android:layout_weight=".60"
    		android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Schedule"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    <TextView
            android:id="@+id/schedulehelpText"
            android:layout_width="0dp" 
    		android:layout_weight=".50"
            android:layout_height="fill_parent"
            android:gravity="bottom|right"
            android:text="Click to schedule actions"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    
    </LinearLayout>
        
        <LinearLayout 
	    android:id="@+id/StartNowLayout"
	    android:layout_width="fill_parent" 
	    android:layout_height="0dp" 
	    android:layout_weight=".25"
	    android:background="#a4c639"
		android:layout_margin="2dp"
		android:padding="2dp"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/StartNowImage"
            android:layout_width="50dp" 
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/launcher_white" />
    
    <TextView
            android:id="@+id/StartNowText"
            android:layout_width="0dp" 
    		android:layout_weight=".70"
    		android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Start Now!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    <TextView
            android:id="@+id/startnowhelpText"
            android:layout_width="0dp" 
    		android:layout_weight=".50"
            android:layout_height="fill_parent"
            android:gravity="bottom|right"
            android:text=""
            android:textSize="12sp"
            android:textColor="#ffffff" />
    
    </LinearLayout>

  </LinearLayout>
