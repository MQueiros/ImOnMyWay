<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.imonmyway.StartActivity" >
    
    <TextView 
        android:id="@+id/textHelp" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:text="No actions available!"
    />
    
    <ListView
    android:id="@+id/listView1"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="0dp" 
    android:layout_weight=".75" >
	</ListView> 
	
    <LinearLayout
  	android:layout_width="fill_parent"  
	android:layout_height="0dp"
  	android:layout_weight=".10" 
  	android:gravity="center"  
  	android:padding="4dp"
  	android:layout_marginRight="2dp"
  	android:orientation="horizontal" >
  	
    <LinearLayout 
	    android:id="@+id/buttonClock"
	    android:layout_width="0dp"  
     	android:layout_height="fill_parent" 
     	android:layout_weight=".50"
	    android:background="#555555"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/ShowEndImage"
            android:layout_height="fill_parent"
            android:layout_width="0dp" 
    		android:layout_weight=".30"
    		android:padding="4dp"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_alarms" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".70"
        android:gravity="center"
        android:orientation="vertical" >
        
    <TextView
            android:id="@+id/ShowEndText"
            android:layout_width="fill_parent" 
    		android:layout_weight=".50"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Run Until"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    <TextView
            android:id="@+id/endHourEdit"
            android:layout_width="fill_parent" 
    		android:layout_weight=".50"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="09:00"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    </LinearLayout> 
    </LinearLayout> 
 	
 	<LinearLayout 
	    android:id="@+id/buttonStart"
	    android:layout_width="0dp"  
     	android:layout_height="fill_parent" 
     	android:layout_weight=".50"
     	android:padding="4dp"
     	android:layout_marginLeft="2dp"
	    android:background="#a4c639"
	    android:orientation="horizontal" >
    
    <ImageView
            android:id="@+id/StartImage"
            android:layout_width="0dp" 
    		android:layout_weight=".30"
    		android:padding="4dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
            android:src="@drawable/launcher_white" />
    
    <TextView
            android:id="@+id/StartText"
            android:layout_width="0dp" 
    		android:layout_weight=".70"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Start"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff" />
    
    </LinearLayout> 
 	
 	</LinearLayout>
</LinearLayout>
